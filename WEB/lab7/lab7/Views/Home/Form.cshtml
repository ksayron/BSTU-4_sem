@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Celebrity</title>
</head>
<body>
    <h2>Create Celebrity</h2>
    <form action="/Home/Confirm" method="post" enctype="multipart/form-data">
        <div>
            <label for="FullName">Full Name:</label>
            <input type="text" id="FullName" name="FullName" required />
        </div>

        <div>
            <label for="Nationality">Nationality:</label>
            <input type="text" id="Nationality" name="Nationality" required />
        </div>

        <div>
            <label for="UploadedPhoto">Upload Photo:</label>
            <input type="file" id="UploadedPhoto" name="file" accept="image/*" required />
        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>