<Window x:Class="Lab4_5.BookAddBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_5"
        mc:Ignorable="d"
        Title="BookAddBox" Height="750" Width="400">
    <Grid Background="#FF3E508E">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>

            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2.6*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,0,0,0" Grid.RowSpan="3">Название</Label>
        <Label Grid.Column="2" Grid.Row="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Авторы</Label>
        <Label Grid.Column="2" Grid.Row="6" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Жанры</Label>
        <Label Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Электронная почта</Label>

        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Grid.RowSpan="1" Name="TitleInput"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Name="AuthorInput" />
        <ComboBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center"  Name="Genreinput" />
        <TextBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Name="EmailInput" />
        <Button Grid.Column="1" Grid.Row="13" FontSize="14" FontWeight="Bold" Click="Button_Click" Grid.ColumnSpan="3" Margin="46,0,46,0" >Регестрация</Button>
    </Grid>
</Window>
