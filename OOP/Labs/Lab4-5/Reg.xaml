<Window x:Class="Lab4_5.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_5"
        mc:Ignorable="d"
        Title="Reg" Height="750" Width="400">
    <Grid Background="#FF3E508E">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>

            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"></ColumnDefinition>
            <ColumnDefinition Width="46*"></ColumnDefinition>
            <ColumnDefinition Width="115*"></ColumnDefinition>
            <ColumnDefinition Width="46*"></ColumnDefinition>
            <ColumnDefinition Width="46*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,0,0,0" Grid.RowSpan="3">Номер карты читателя</Label>
        <Label Grid.Column="2" Grid.Row="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Логин</Label>
        <Label Grid.Column="2" Grid.Row="6" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Пароль</Label>
        <Label Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3" Foreground="#FFEFE1E1" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,24,0,24" Grid.RowSpan="3">Электронная почта</Label>
        <Label Grid.Row="15"  Foreground="#FFEFE1E1" FontSize="12" FontFamily="Segoe UI" FontWeight="Medium"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Есть&#10;аккаунт?" Margin="2,26,137,38"  Grid.Column="1" Grid.ColumnSpan="2"/>

        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Grid.RowSpan="1" Name="CardInput" TextChanged="CardInput_TextChanged"/>
        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Name="LoginInput" />
        <PasswordBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center"  Name="PasswordInput" />
        <TextBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" VerticalContentAlignment="Center" Name="EmailInput" TextChanged="EmailInput_TextChanged"/>
        <Button Grid.Column="1" Grid.Row="13" FontSize="14" FontWeight="Bold" Click="Button_Click" Grid.ColumnSpan="3" Margin="46,0,46,0" >Регестрация</Button>
        <Button Grid.Column="3" Grid.Row="15" FontSize="12" FontWeight="Medium" Click="Button_Click_1" Background="{x:Null}" Foreground="#FF4D94B5" HorizontalAlignment="Center" BorderBrush="{x:Null}" VerticalAlignment="Center" >
            <TextBlock TextDecorations="Underline" Width="34">Войти</TextBlock>
        </Button>

    </Grid>
</Window>
