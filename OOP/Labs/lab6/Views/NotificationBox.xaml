<Window x:Class="Lab4_5.Views.NotificationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_5.Views"
        mc:Ignorable="d"
                Width="300" Height="100"
                Icon="../Resources/Images/book_icon.ico"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">
    <Border Background="#FF323A5E" CornerRadius="10" Padding="10" Margin="10">
        <TextBlock Text="{Binding Message}" Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</Window>
