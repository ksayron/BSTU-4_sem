<Application x:Class="KNP_Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KNP_Library"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                <ResourceDictionary Source="./Resources/Dictionary/DictionaryEN.xaml" x:Name="EN_Dict"/>
                <ResourceDictionary Source="./Resources/Dictionary/DictionaryRU.xaml" x:Name="RU_Dict"/>
                <ResourceDictionary Source="./Resources/Themes/Generic.xaml" x:Name="Custom_Notif"/>
                <ResourceDictionary Source="./Resources/Themes/LightTheme.xaml" x:Name="LightTheme"/>
                <ResourceDictionary Source="./Resources/Themes/DarkTheme.xaml" x:Name="DarkTheme"/>

            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
