<Window x:Class="D_D_CharacterSheet.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D_D_CharacterSheet.View"
        mc:Ignorable="d"
        Title="Авторизация" Height="230" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label>Логин</Label>
            <TextBox x:Name="UsernameBox"  Margin="5"/>
            <Label>Пароль</Label>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>
            <Button Content="Войти" Click="Login_Click" Margin="5"/>
            <Button Content="Зарегестрироваться" Click="Register_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
