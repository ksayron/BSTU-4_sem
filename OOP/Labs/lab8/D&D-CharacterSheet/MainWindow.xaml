<Window x:Class="D_D_CharacterSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DnD Characters" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Add" Click="Add_Click" Margin="5"/>
            <Button Content="Edit" Click="Edit_Click" Margin="5"/>
            <Button Content="Delete" Click="Delete_Click" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="CharacterGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
    </DockPanel>
</Window>